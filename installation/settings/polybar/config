[bar/mainbar-i3]
monitor = ${env:MONITOR}
monitor-strict = false
override-redirect = false
bottom = false
fixed-center = true
width = 100%
height = 20

background = ${colors.background}
foreground = ${colors.foreground}

radius = 0.0
line-size = 1
line-color = #0

padding-left = 2
padding-right = 2

module-margin-left = 1
module-margin-right = 1

font-0 = "Hack:size=7.5;0"
font-1 = "FontAwesome:size=7.5;0"

modules-left =appfinder filesystem temperature1 temperature2 temperature3
modules-center =cpu1 memory1 battery load-average
modules-right =pub-ip wired-network wireless-network

;tray-detached = false
;tray-offset-x = 0
;tray-offset-y = 0
;tray-padding = 2
;tray-maxsize = 20
;tray-scale = 1.0
;tray-position = right
;tray-background = ${colors.background}

; Enable support for inter-process messaging
; See the Messaging wiki page for more details.
enable-ipc = true

;Workspace bar scrolling with mouse wheel
scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev

